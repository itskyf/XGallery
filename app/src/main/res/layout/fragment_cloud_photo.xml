<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_google"
        android:scaleX="1"
        android:scaleY="1">
    </ImageView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf ="parent"
            android:background="@drawable/top_layout_background"
            android:id="@+id/topLayout"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_back_24"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf ="parent"
                />

            <ImageButton
                android:id="@+id/starBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_star_24"
                app:layout_constraintRight_toLeftOf ="@id/moreBtn"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf ="parent" />
            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/ic_more_24"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf ="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/bottom_layout_background"
            android:id="@+id/bottomLayout"
            android:paddingVertical="5dp">

            <ImageButton
                android:id="@+id/shareBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:layout_marginStart="25dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/editBtn"
                android:src="@drawable/ic_share_24"
                android:background="@drawable/circle_button"
                />

            <ImageButton
                android:id="@+id/editBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/shareBtn"
                app:layout_constraintRight_toLeftOf="@id/deleteBtn"
                android:src="@drawable/ic_equalizer_24"
                android:background="@drawable/circle_button" />

            <ImageButton
                android:id="@+id/deleteBtn"
                android:layout_width="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="70dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/editBtn"
                app:layout_constraintRight_toLeftOf="@id/exitBtn"
                android:src="@drawable/ic_delete_24"
                android:background="@drawable/circle_button"/>

            <ImageButton
                android:id="@+id/exitBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="25dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/deleteBtn"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_delete_24"
                android:background="@drawable/circle_button"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include layout = "@layout/photo_detail"
        android:id="@+id/bottomSheet"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>