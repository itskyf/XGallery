<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="2sp">
        <TableRow android:layout_marginEnd="30sp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:text="@string/favorites"
                android:textSize="20sp"
                android:textColor="#000000"
                android:background="@drawable/button_border"
                android:textAllCaps="false"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_baseline_favorite_border_24"
                android:gravity="left|center_vertical"
                android:paddingLeft="20sp"
                android:drawableStart="@drawable/ic_baseline_favorite_border_24"
                android:paddingStart="20sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:text="@string/utilities"
                android:textColor="#000000"
                android:textSize="20sp"
                android:background="@drawable/button_border"
                android:textAllCaps="false"
                android:drawablePadding="5sp"
                android:drawableLeft="@drawable/ic_outline_library_add_check_24"
                android:gravity="left|center_vertical"
                android:paddingLeft="20sp"
                android:drawableStart="@drawable/ic_outline_library_add_check_24"
                android:paddingStart="20sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </TableRow>
        <TableRow android:layout_marginEnd="30sp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/button_border"
                android:drawableStart="@drawable/ic_outline_archive_24"
                android:drawableLeft="@drawable/ic_outline_archive_24"
                android:drawablePadding="5sp"
                android:gravity="left|center_vertical"
                android:paddingStart="20sp"
                android:paddingLeft="20sp"
                android:textSize="20sp"
                android:text="@string/archive"
                android:textAllCaps="false"
                android:textColor="#000000"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:text="@string/trash"
                android:textSize="20sp"
                android:textColor="#000000"
                android:background="@drawable/button_border"
                android:textAllCaps="false"
                android:drawablePadding="5sp"
                android:drawableLeft="@drawable/ic_outline_restore_from_trash_24"
                android:gravity="left|center_vertical"
                android:paddingLeft="20sp"
                android:drawableStart="@drawable/ic_outline_restore_from_trash_24"
                android:paddingStart="20sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:text="@string/photos_on_device"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginStart="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:textSize="20sp"
            android:textColor="#0000ff"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickViewAll"
            android:layout_marginEnd="30sp"
            tools:ignore="OnClick" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">


        <androidx.recyclerview.widget.RecyclerView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/viewgroup"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:text="@string/album"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginStart="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent"
            android:textSize="20sp"
            android:textColor="#0000ff"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickViewAll"
            android:layout_marginEnd="30sp"
            tools:ignore="OnClick" />
    </LinearLayout>
    <GridView
        android:id="@+id/viewAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2" />
</LinearLayout>