<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="18dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/storyThumbnail"
        android:layout_width="0dp"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="4:7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize10Percent"
        app:strokeWidth="1dp"
        android:alpha="0.9"/>

    <TextView
        android:id="@+id/album_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="4"
        app:layout_constraintBottom_toBottomOf="@id/storyThumbnail"
        app:layout_constraintStart_toStartOf="@id/storyThumbnail"
        app:layout_constraintEnd_toEndOf="@id/storyThumbnail"
        android:text="Nguyen Van A"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:src="@drawable/ic_google"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/storyThumbnail"
        app:layout_constraintStart_toStartOf="@id/storyThumbnail"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        app:strokeWidth="3dp"
        android:padding="3dp"
        app:strokeColor="#6495ED"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50Percent"/>
</androidx.constraintlayout.widget.ConstraintLayout>