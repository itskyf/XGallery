<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_google"
        android:scaleX="1"
        android:scaleY="1">
    </ImageView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf ="parent"
            android:background="@drawable/top_layout_background">
            <Button
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_back_24"
                android:minWidth="24dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf = "parent"
                app:layout_constraintTop_toTopOf ="parent"
                />

            <Button
                android:id="@+id/starBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_star_24"
                android:minWidth="24dp"
                app:layout_constraintRight_toLeftOf ="@id/moreBtn"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf ="parent" />
            <Button
                android:id="@+id/moreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_more_24"
                android:minWidth="24dp"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf ="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/bottom_layout_background">

            <Button
                android:id="@+id/shareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:layout_marginStart="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/editBtn"
                android:drawableLeft="@drawable/ic_share_24"
                android:background="@android:color/transparent"
                android:minWidth="24dp"
                android:layout_marginLeft="50dp"/>

            <Button
                android:id="@+id/editBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/shareBtn"
                app:layout_constraintRight_toLeftOf="@id/deleteBtn"
                android:drawableLeft="@drawable/ic_equalizer_24"
                android:background="@android:color/transparent"
                android:minWidth="24dp"/>

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/editBtn"
                app:layout_constraintRight_toLeftOf="@id/exitBtn"
                android:drawableLeft="@drawable/ic_delete_24"
                android:background="@android:color/transparent"
                android:minWidth="24dp"/>

            <Button
                android:id="@+id/exitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/deleteBtn"
                app:layout_constraintRight_toRightOf="parent"
                android:drawableLeft="@drawable/ic_delete_24"
                android:background="@android:color/transparent"
                android:minWidth="24dp"
                android:layout_marginRight="50dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>