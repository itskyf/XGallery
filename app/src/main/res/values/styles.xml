<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.CornerSize10Percent">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize50Percent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.XGallery.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

    <style name="Widget.MaterialComponents.AppBarLayout.Secondary" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Toolbar.Secondary" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@android:color/transparent</item>
        <item name="titleTextColor">@color/blue_900</item>
    </style>
</resources>